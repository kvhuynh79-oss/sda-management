<?xml version="1.0" encoding="utf-8"?>
<!--
    Main layout for the MySDAManager "My Tasks" widget.
    Dark theme matching the app's bg-gray-900 (#111827).

    Structure:
    - Header: "My tasks" title + org subtitle + "+" add button
    - Task container: dynamically populated task rows
    - Empty state: shown when no tasks
    - Auth state: shown when not logged in
    - Error state: shown on fetch failure
    - Footer: "View all X tasks" link
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <!-- Title + Subtitle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My tasks"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MySDAManager"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:layout_marginTop="1dp" />
        </LinearLayout>

        <!-- Add Task Button -->
        <FrameLayout
            android:id="@+id/widget_add_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/widget_add_button_bg"
            android:contentDescription="Create new task">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>
    </RelativeLayout>

    <!-- Task List Container (dynamically populated) -->
    <LinearLayout
        android:id="@+id/widget_task_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tasks due"
            android:textColor="#9CA3AF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You're all caught up!"
            android:textColor="#6B7280"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Auth State (Not Logged In) -->
    <LinearLayout
        android:id="@+id/widget_auth_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open app to sign in"
            android:textColor="#9CA3AF"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Error State -->
    <LinearLayout
        android:id="@+id/widget_error_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unable to load tasks"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tap to retry"
            android:textColor="#0D9488"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Footer: View All Link -->
    <LinearLayout
        android:id="@+id/widget_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all tasks"
            android:textColor="#0D9488"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
